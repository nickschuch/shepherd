source 'https://rubygems.org'

group :development do
  # Required for Capistrano
  gem 'railsless-deploy'
  gem 'capistrano', '~>2.5.5'
  gem 'capistrano-ext'
  gem 'capistrano-drupal'
end

group :frontend do
  gem 'breakpoint',           '~> 2.5.0'
  gem 'bundler',              '~> 1.8'
  gem 'chroma-sass',          '1.0.0.alpha.3'
  gem 'compass',              '~> 1.0'
  gem 'compass-import-once',  '~> 1.0'
  # Build compass sprites faster with oily_png.
  gem 'oily_png',             '~> 1.1'
  gem 'sass',                 '~> 3.4'
  gem 'sass-globbing',        '~> 1.1'
  gem 'scss-lint',            '~> 0.33'
  gem 'zen-grids',            '>= 2.0.0.beta.3'
end
