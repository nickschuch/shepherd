{
    "name": "ua-web-team/ua-site-manager",
    "description": "University of Adelaide Drupal 8 base project.",
    "type": "project",
    "license": "MIT",
    "repositories": [
        {"type": "vcs", "url": "git@gitlab.adelaide.edu.au:drupal-modules/ua_ldap.git"},
        {"type": "vcs", "url": "git@gitlab.adelaide.edu.au:drupal-modules/ua_ldap_authorisation.git"},
        {"type": "vcs", "url": "git@gitlab.adelaide.edu.au:web-team/ua_d8_theme.git"},
        {"type": "composer", "url": "https://packages.drupal.org/8"}
    ],
    "require": {
        "composer-plugin-api":                     "^1.0",
        "composer/installers":                     "^1.0.25",
        "cweagans/composer-patches":               "~1.0",
        "drush/drush":                             "8.*",
        "drupal/core":                             "8.2.*",
        "drupal/cas":                              "1.x-dev#1aa23bc778e68adfc6e4506476cfd517b3c906d2",
        "drupal/entity_reference_revisions":       "dev-1.x",
        "drupal/paragraphs":                       "1.*",
        "drupal/r4032login":                       "1.*@dev",
        "ua-drupal-modules/ua_ldap":               "dev-develop",
        "ua-drupal-modules/ua_ldap_authorisation": "dev-develop",
        "ua-web-team/ua_theme":                    "dev-develop"
    },
    "require-dev": {
        "drupal/devel":             "1.*@dev",
        "behat/mink":               "~1.6",
        "behat/mink-goutte-driver": "~1.2",
        "mikey179/vfsStream":       "~1.2",
        "phpunit/phpunit":          "~4.8",
        "symfony/css-selector":     "2.7.*"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "bin-dir": "bin/"
    },
    "extra": {
        "installer-paths": {
            "app/core":                     ["type:drupal-core"],
            "app/modules/contrib/{$name}":  ["type:drupal-module"],
            "app/profiles/contrib/{$name}": ["type:drupal-profile"],
            "app/themes/contrib/{$name}":   ["type:drupal-theme"],
            "app/libraries/{$name}":        ["type:drupal-library"],
            "app/drush/commands/{$name}":   ["type:drupal-drush"]
        },
        "patches": {
            "drupal/r4032login": {
                "Override return destination parameter": "https://www.drupal.org/files/issues/r4032login_2534308_2.patch",
                "Allow redirecting user to front": "https://www.drupal.org/files/issues/r4032login-redirect_to_front-2748151-2.patch"
            }
        }
    }
}
