{
    "name": "ua-web-team/ua-site-manager",
    "description": "University of Adelaide Drupal 8 base project.",
    "type": "project",
    "license": "MIT",
    "repositories": [
        {
            "type": "vcs",
            "url": "git@gitlab.adelaide.edu.au:drupal-modules/ua_ldap.git"
        },
        {
            "type": "composer",
            "url": "https://packagist.drupal-composer.org"
        },
        {
            "type": "vcs",
            "url": "git@gitlab.adelaide.edu.au:drupal-modules/ua_ldap_authorisation.git"
        }
    ],
    "require": {
        "composer-plugin-api": "^1.0",
        "composer/installers": "^1.0.20",
        "cweagans/composer-patches": "~1.0",
        "drush/drush": "8.*",
        "drupal/core": "8.0.*",
        "drupal/cas": "8.1.*@dev",
        "drupal/diff": "8.1.*@dev",
        "drupal/entity_reference_revisions": "8.1.*@dev",
        "drupal/paragraphs": "dev-8.x-1.x",
        "drupal/r4032login": "8.1.*@dev",
        "ua-drupal-modules/ua_ldap": "dev-develop",
        "ua-drupal-modules/ua_ldap_authorisation": "dev-develop"
    },
    "require-dev": {
        "drupal/devel":             "8.1.*@dev",
        "behat/mink":               "~1.6",
        "behat/mink-goutte-driver": "~1.2",
        "mikey179/vfsStream":       "~1.2",
        "phpunit/phpunit":          "~4.8",
        "symfony/css-selector":     "2.7.*"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "bin-dir": "bin/",
        "github-oauth": {
            "github.com": "681de8b61108d3c64168e26426860b50c97aa86d"
        }
    },
    "extra": {
        "installer-paths": {
            "app/core": [
                "type:drupal-core"
            ],
            "app/modules/contrib/{$name}": [
                "type:drupal-module"
            ],
            "app/profiles/contrib/{$name}": [
                "type:drupal-profile"
            ],
            "app/themes/contrib/{$name}": [
                "type:drupal-theme"
            ],
            "app/libraries/{$name}": [
                "type:drupal-library"
            ],
            "app/drush/commands/{$name}": [
                "type:drupal-drush"
            ]
        },
        "patches": {
            "drupal/r4032login": {
                "Use generateFromRoute instead of generateFromPath, fixes D8 RC1 issue": "https://www.drupal.org/files/issues/generate_from_route.patch",
                "Override return destination parameter": "https://www.drupal.org/files/issues/r4032login_2534308_3.patch",
                "Redirection triggers for all kernel exceptions, not just 403": "https://www.drupal.org/files/issues/r4032login_cleaned_2534878_4.patch"
            }
        }
    }
}
